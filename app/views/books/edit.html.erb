<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h1>Editting Book</h1>

				<%= form_for(@book) do |b| %>

				<div class="field row">
					<label>Title</label>
					<%= b.text_field :title, class:"col-xs-12"%>
				</div><br>
				<div class="field row">
					<label>Opinion</label>
					<%= b.text_area :body, class:"col-xs-12" %>
				</div><br>
				<div class="action row">
					<%= b.submit 'Update Book', class:"btn btn-primary col-xs-12" %>
				</div>
				<% end %>
				<br>
				<%= link_to "Show", book_path(@book)%> | <%= link_to "Back", books_path %>
			</div>
		</div>
	</div>
</div>