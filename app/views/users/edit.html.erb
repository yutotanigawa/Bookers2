<div class="body">
	<div class="container">
		<h2>User info</h2>

		<div class="container">
			<div class="row">
				<% if @user.errors.any? %>
				<div class = "alert alert-warning">
					<h3><%= @user.errors.count %>errors prohibited this user from being saved:</h3>
					<ul>
						<% @user.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
					<% end %>
				</div>
			</div>
		</div>


		<%= form_for(@user) do |f| %>

		<label class="form">Name</label>
		<%= f.text_field :name %><br>
		<br>
		<label class="form">Image</label>
		<%= f.attachment_field :profile_image, placeholder: "プロフィール画像"%><br>

		<label class="form">Introduction</label>
		<%= f.text_area :introduction %><br>
		<br>
		<%= f.submit 'Update User' %>

		<% end %>
	</form>
</div>
</div>